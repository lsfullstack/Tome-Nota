{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    // ignora as migrations e entities
    "ignorePatterns": [
        "**/migrations/*.ts",
        "**/entities/*.ts"
    ],
    "rules": {
         //função arrow function 
         "func-style": [
            "error",
            "expression"
        ],
        // declaração camelCase 
        "camelcase": "error",
        // aspas "" 
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
